# !! try to keep this minimal please

colorscheme kanagawa

add-highlighter global/ number-lines -relative -hlcursor -separator "   " -cursor-separator " î®Š " -min-digits 3 
add-highlighter global/ wrap
add-highlighter global/ show-matching

# modeline
# use set-option -add global modelinefmt
# Maybe bubble style like neovim

# indentation
set-option global tabstop     4
set-option global indentwidth 4

# scrolloff
set-option global scrolloff   6,4

# comment lines bind
map global normal "#" ":comment-line<ret>"

# tabs to spaces
hook global InsertChar \t %{
    exec -draft h@
}

# jk to exit insert mode
hook global InsertChar k %{ try %{
    exec -draft hH <a-k>jk<ret> d
    exec <esc>
}}

# kak-lsp
eval %sh{kak-lsp --config "$HOME"/.config/kak/kak-lsp/kak-lsp.toml --kakoune -s $kak_session}
#   filetype-specific config
hook global WinSetOption filetype=(javascript|typescript|javascriptreact|typescriptreact) %{
    lsp-enable-window
}
hook global WinSetOption filetype=python %{
    lsp-enable-window
}
hook global BufSetOption filetype=rust %{
    lsp-enable-window
}

# wezterm.kak
wezterm-integration-enable
set-option global wezterm_terminal_default wezterm-terminal-horizontal
