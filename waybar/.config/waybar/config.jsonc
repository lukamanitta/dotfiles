    "on-click": "wezterm start -- wiremix",
    "on-click-right": "wpctl set-mute @DEFAULT_SINK@ toggle",
    "tooltip-format": "{volume}%",
    "scroll-step": 5,
    "format-muted": "Û∞ñÅ",
    "format-icons": {
      "default": [
        "ÔÄ¶",
        "ÔÄß",
