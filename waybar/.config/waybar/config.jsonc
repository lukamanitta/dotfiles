    "format-discharging": "{icon} {capacity}%",
    "format-charging": "{icon}",
    "format-plugged": "Ôá¶",
    "on-click": "~/.config/rofi/scripts/power-profiles",
    "format-icons": {
      "charging": [
        "Û∞¢ú",
        "Û∞ÇÜ",
        "Û∞Çá",
        "Û∞Çà",
        "Û∞¢ù",
        "Û∞Çâ",
        "Û∞¢û",
        "Û∞Çä",
        "Û∞Çã",
        "Û∞ÇÖ"
      ],
      "default": [
        "Û∞Å∫",
        "Û∞Åª",
        "Û∞Åº",
        "Û∞ÅΩ",
